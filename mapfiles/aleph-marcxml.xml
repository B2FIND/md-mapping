<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for MARC XML metadata from B2SHARE. -->
  <namespaces>
    <namespace ns="r" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="marc" uri="http://www.loc.gov/MARC21/slim"/>
  </namespaces>
  <mappings>
    <!-- General fields shown above the field/value tables -->
    <field name="title">
      <xpath>//marc:datafield[@tag = '245']/marc:subfield[@code = 'a']/text()</xpath>
    </field>
    <field name="notes">
      <xpath>//marc:datafield[@tag = '520']/marc:subfield[@code = 'h']/text()</xpath>
    </field>
    <field name="tags">
      <xpath>//marc:datafield[@tag = '980']/marc:subfield[@code = 'a']/text()</xpath>
      <xpath>//marc:datafield[@tag = '653']/marc:subfield[@code = 'a']/text()</xpath>
    </field>
    <!-- Central facets, shown in an extra table 'Main fields' (not implemented yet : all fields in table 'Additional info') -->
    <field name="url">
      <xpath>//marc:datafield[@tag = '856']/marc:subfield[@code = 'u']/text()</xpath>
    </field>
   <field name="PID">
      <xpath>//marc:datafield[@tag = '024']/marc:subfield[@code = 'a']/text()</xpath>
      <xpath>//marc:datafield[@tag = '024' and marc:subfield[@code='2']/text() = 'PID']/marc:subfield[@code = 'a']/text()</xpath>
   </field>
   <field name="Checksum">
      <xpath>//marc:datafield[@tag = '024' and marc:subfield[@code='2']/text() = 'checksum']/marc:subfield[@code = 'a']/text()</xpath>
   </field>
   <field name="Discipline">
      <xpath>//marc:datafield[@tag = '980']/marc:subfield[@code = 'a']/text()</xpath>
    </field>
    <field name="author">
      <xpath>//marc:datafield[@tag = '999']/marc:subfield[@code = '9']/text()</xpath>
      <xpath>//marc:datafield[@tag = '100']/marc:subfield[@code = 'a']/text()</xpath>
      <xpath>//marc:datafield[@tag = '700']/marc:subfield/text()</xpath>
    </field>
    <!-- All other visible fields, shown in table 'Additional info' -->
    <field name="PublicationYear">
      <xpath>if (contains(//marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text(), '-')) then substring-before(//marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text(), '-') else //marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text()</xpath>
    </field>
    <field name="PublicationTimestamp">
      <xpath>if (contains(//marc:datafield[@tag = '269']/marc:subfield[@code = 'c']/text(), '-')) then concat(substring-before(//marc:datafield[@tag = '269']/marc:subfield[@code = 'c']/text(), '-'),'-07-01T11:59:59Z') else concat(//marc:datafield[@tag = '269']/marc:subfield[@code = 'c']/text(),'-07-01T11:59:59Z')</xpath>
      <xpath>if (contains(//marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text(), '-')) then concat(substring-before(//marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text(), '-'),'-07-01T11:59:59Z') else concat(//marc:datafield[@tag = '264']/marc:subfield[@code = 'c']/text(),'-07-01T11:59:59Z')</xpath>
    </field>
    <field name="Language">
      <xpath>//marc:datafield[@tag = '546']/marc:subfield[@code = 'a']/text()</xpath>
    </field>
    <field name="Origin">
      <xpath>//marc:datafield[@tag = '520']/marc:subfield[@code = '9']/text()</xpath>
      <xpath>//marc:datafield[@tag = '856']/marc:subfield[@code = 'y']/text()</xpath>
      <xpath>//marc:datafield[@tag = '520']/marc:subfield[@code = '9']/text()</xpath>
      <xpath>//marc:datafield[@tag = '260']/marc:subfield[@code = 'b']/text()</xpath>
    </field>
    <field name="Format">
      <string>MarcXML</string>
    </field>
    <field name="GeograhicDescription">
      <string>N/A</string>
    </field>
    <field name="Rights">
      <xpath>//marc:datafield[@tag = '542']/marc:subfield[@code = 'l']/text()</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//r:record/r:header/r:identifier/text()</xpath>
    </field>
    <field name="MapperVersion">
      <string expand="true">${mapper_version}</string>
    </field>
  </mappings>
</mapping-table>
